<?xml version="1.0" encoding="UTF-8" ?>



<suite name = "thread" parallel = "classes" thread-count = "3">

    <!--
    classes级别：不同的class tag下的用例可以在不同的线程下执行
                相同的classs tag下的用例只能在相同的线程下执行

    -->
    <test name = "demo1">
        <classes name = "d1">

            <class name = "com.course.testng.mutiThread.MutiThreadOnXml"/>
        </classes>
    </test>

    <test name = "demo2">
        <classes name = "d2">
            <class name = "com.course.testng.mutiThread.MutiThreadOnXml"/>
        </classes>
    </test>

    <test name = "demo3">
        <classes name = "d3">
            <class name = "com.course.testng.BasicAnnotation"/>
        </classes>
    </test>
</suite>